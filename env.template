# CS:GO/CS2 Skin Gambling Platform - Environment Configuration

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL (Production)
DATABASE_URL=postgresql://username:password@localhost:5432/cs_gambling_db
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=cs_gambling_db

# ===========================================
# REDIS CONFIGURATION (Sessions & Caching)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# STEAM API INTEGRATION
# ===========================================
# Get your Steam API key from: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key
STEAM_RETURN_URL=http://localhost:3001/auth/steam/return

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Generate a strong secret for JWT tokens
JWT_SECRET=your_super_secure_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here

# CORS settings
CORS_ORIGIN=http://localhost:3000

# ===========================================
# SKIN PRICING APIs
# ===========================================
# CSGOFloat API for skin prices
CSGOFLOAT_API_KEY=your_csgofloat_api_key

# Steam Community Market API
STEAM_MARKET_API_KEY=your_steam_market_api_key

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=debug

# ===========================================
# GAME SETTINGS
# ===========================================
# Minimum bet amounts (in USD cents)
MIN_BET_AMOUNT=100
MAX_BET_AMOUNT=100000

# House edge percentages
ROULETTE_HOUSE_EDGE=2.70
COINFLIP_HOUSE_EDGE=5.00
CRASH_HOUSE_EDGE=1.00

# ===========================================
# PROVABLY FAIR SETTINGS
# ===========================================
SERVER_SEED_SECRET=your_server_seed_secret_here

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
# Set to true to enable demo mode with fake skins
DEMO_MODE=true

# Set to true to enable detailed API logging
DEBUG_API=true 